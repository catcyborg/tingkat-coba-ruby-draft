!!!
%html
  %head
    %title CobaRuby
    = stylesheet_link_tag    "style", :media => "all"
  %body
    .pane.pane-left
      .header
        %h1 Coba Ruby
      = yield
      .back
        Kembali ke
        = link_to "Ruby Indonesia", 'http://id-ruby.org/'
    .pane.pane-right
      #code-editor
      .code-tools
        = link_to "JALANKAN", '#', class: "btn-run"
        .code-output
          %h3 Output
          %pre
            %code
              Ini Output
    .clearfix
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
    = javascript_include_tag "http://nyan.catcyb.org/mengenal-ruby/js/vendor/editor/ace.js", charset: "utf-8"
    = javascript_include_tag "all"
